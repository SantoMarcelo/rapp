desc "rodar dev marcelo com firefox"
task :marcelo_firefox do
    ENV['BROWSER'] = 'firefox'
    ENV['ENVIRONMENT'] = 'marcelo'
    ENV['BRANCH'] = 'current'
    sh 'rspec -fd --tag admin_crm_opportunities'
    #sh 'allure serve log/reports'
end

